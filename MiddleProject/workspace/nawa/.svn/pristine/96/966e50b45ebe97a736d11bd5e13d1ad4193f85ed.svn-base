package lecture.dao;

import java.util.ArrayList;
import java.util.List;

import org.apache.ibatis.exceptions.PersistenceException;
import org.apache.ibatis.session.SqlSession;

import lecture.vo.LectureVO;
import util.MyBatisUtil;

public class LecDAOImpl implements ILecDAO {

	private static ILecDAO lecDAO;
	
	private LecDAOImpl() {
		
	}
	
	public static ILecDAO getInstance() {
		if(lecDAO == null) 
			lecDAO = new LecDAOImpl();
		
		return lecDAO;
	}

	
	@Override
	public List<LectureVO> selectAll() {

		System.out.println("DAO"  );
		List<LectureVO> lecList = new ArrayList<LectureVO>();
		
		SqlSession sqlSession = MyBatisUtil.getInstance(true);

		try {
			lecList = sqlSession.selectList("lecture.selectAll");
			
		} catch (PersistenceException ex) {
			ex.printStackTrace();
		}finally {
			sqlSession.close();
		}
		return lecList;
	}

	@Override
	public LectureVO getLecture(String lecNo) {

		SqlSession sqlSession = MyBatisUtil.getInstance();
		
		LectureVO lv = null;
		try {
			
			lv = sqlSession.selectOne("lecture.getDetail",lecNo);
			
		} catch (PersistenceException e) {
			e.printStackTrace();
		}finally {
			sqlSession.close();
		}
		
		return lv;
	}

	@Override
	public int insertLecture(LectureVO lv) {

		System.out.println(lv);
		SqlSession sqlSession = MyBatisUtil.getInstance();
		
		int cnt = 0;
		
		try {
			
			cnt = sqlSession.insert("lecture.insertLecture", lv);
			
		} catch (PersistenceException e) {
			e.printStackTrace();
		}finally {
			if(cnt != 0) sqlSession.commit();
			sqlSession.close();
		}
//		System.out.println(cnt);
		
		
		return cnt;
	}

	@Override
	public int updateLecture(LectureVO lv) {

		SqlSession sqlSession = MyBatisUtil.getInstance();
		
		System.out.println(lv);
		
		int cnt = 0;
		
		try {
			cnt = sqlSession.update("lecture.updateLecture", lv);
			if(cnt > 0) sqlSession.commit();
		} catch (PersistenceException ex) {
			ex.printStackTrace();
		}finally {
			sqlSession.close();
		}
		
		
		return cnt;
	}

	@Override
	public int deleteLecture(String lecNo) {

		System.out.println(lecNo);
		
		SqlSession sqlSession = MyBatisUtil.getInstance();
		
		int cnt = 0;
		
		try {
			cnt = sqlSession.delete("lecture.deleteLecture", lecNo);
			
			if(cnt > 0) {
				sqlSession.commit();
			}
			
		} catch (PersistenceException ex) {
			ex.printStackTrace();
		}finally {
			sqlSession.close();
		}
		
		return 0;
	}

	
	
}
