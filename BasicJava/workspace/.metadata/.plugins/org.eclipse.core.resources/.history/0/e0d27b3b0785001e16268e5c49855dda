	public void printMySeat(RoomReserve rr) {
		System.out.println("예약번호\t회원아이디\t좌석번호");
		System.out.println(rr.getResv_no()+"\t"+rr.getMem_id()+"\t"+rr.getSeat_no()+"\t");
