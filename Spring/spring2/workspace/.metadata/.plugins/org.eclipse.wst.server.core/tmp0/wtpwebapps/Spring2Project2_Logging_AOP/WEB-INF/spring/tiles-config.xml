<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">


<tiles-definitions>

	<definition name="mainTemplate" template="/WEB-INF/views/mainTemplate.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp"></put-attribute>
	</definition>
	
	<!-- 동적으로 변할 페이지에 대한 정보 -->
	<definition name="notice/*" extends="mainTemplate">
		<!-- notice/*과 매핑시키기 위해 {1} 사용
			==>>> notice/*/* 일경우 /{1}/{2}와 같이 사용
		 -->
		<put-attribute name="content" value="/WEB-INF/views/notice/{1}.jsp"></put-attribute>
	</definition>
	
	<definition name="loginTemplate" template="/WEB-INF/views/loginTemplate.jsp"></definition>
	
	<definition name="conn/*" extends="loginTemplate">
		<put-attribute name="content" value ="/WEB-INF/views/notice/{1}.jsp"/>
	</definition>

</tiles-definitions>